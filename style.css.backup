/* ==================== RESET & BASE ==================== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    transition: background-color 0.3s, color 0.3s;
    min-height: 100vh;
    padding: 20px;
}

/* ==================== THEME COLORS ==================== */
/* Light Theme (Default) */
body[data-theme="light"] {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    color: #2c3e50;
}

body[data-theme="light"] .section-card,
body[data-theme="light"] .question-card,
body[data-theme="light"] .question-item {
    background: white;
    color: #2c3e50;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

body[data-theme="light"] .big-btn {
    background: #3498db;
    color: white;
}

body[data-theme="light"] .big-btn:hover {
    background: #2980b9;
}

/* Dark Theme */
body[data-theme="dark"] {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: #ecf0f1;
}

body[data-theme="dark"] .section-card,
body[data-theme="dark"] .question-card,
body[data-theme="dark"] .question-item {
    background: #34495e;
    color: #ecf0f1;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

body[data-theme="dark"] .big-btn {
    background: #3498db;
    color: white;
}

body[data-theme="dark"] .big-btn:hover {
    background: #2980b9;
}

/* Red Theme */
body[data-theme="red"] {
    background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
    color: #2d3436;
}

body[data-theme="red"] .section-card,
body[data-theme="red"] .question-card,
body[data-theme="red"] .question-item {
    background: #fff5f5;
    color: #2d3436;
    box-shadow: 0 4px 6px rgba(214, 48, 49, 0.2);
}

body[data-theme="red"] .big-btn {
    background: #d63031;
    color: white;
}

body[data-theme="red"] .big-btn:hover {
    background: #c0392b;
}

/* Blue Theme */
body[data-theme="blue"] {
    background: linear-gradient(135deg, #a29bfe 0%, #74b9ff 100%);
    color: #2d3436;
}

body[data-theme="blue"] .section-card,
body[data-theme="blue"] .question-card,
body[data-theme="blue"] .question-item {
    background: #e3f2fd;
    color: #2d3436;
    box-shadow: 0 4px 6px rgba(52, 152, 219, 0.2);
}

body[data-theme="blue"] .big-btn {
    background: #0984e3;
    color: white;
}

body[data-theme="blue"] .big-btn:hover {
    background: #0652dd;
}

/* ==================== LAYOUT ==================== */
.page {
    display: none;
    max-width: 1200px;
    margin: 0 auto;
}

.page.active {
    display: block;
}

header {
    text-align: center;
    margin-bottom: 40px;
    position: relative;
}

h1 {
    font-size: 2.5rem;
    margin-bottom: 10px;
}

.subtitle {
    font-size: 1.2rem;
    opacity: 0.8;
}

.back-btn {
    position: absolute;
    left: 0;
    top: 0;
    padding: 12px 24px;
    background: rgba(0, 0, 0, 0.1);
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background 0.3s;
}

.back-btn:hover {
    background: rgba(0, 0, 0, 0.2);
}

/* ==================== THEME SWITCHER ==================== */
.theme-switcher {
    display: flex;
    gap: 10px;
    justify-content: center;
    margin-top: 20px;
}

.theme-btn {
    width: 50px;
    height: 50px;
    border: none;
    border-radius: 50%;
    font-size: 1.5rem;
    cursor: pointer;
    background: rgba(255, 255, 255, 0.3);
    transition: transform 0.3s, background 0.3s;
}

.theme-btn:hover {
    transform: scale(1.1);
    background: rgba(255, 255, 255, 0.5);
}

/* ==================== SECTION CARDS ==================== */
.sections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
}

.section-card {
    padding: 30px;
    border-radius: 16px;
    text-align: center;
    cursor: pointer;
    transition: transform 0.3s, box-shadow 0.3s;
}

.section-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2) !important;
}

.card-icon {
    font-size: 3rem;
    margin-bottom: 15px;
}

.section-card h2 {
    font-size: 1.5rem;
    margin-bottom: 10px;
}

.section-card p {
    opacity: 0.8;
    font-size: 0.95rem;
}

/* ==================== GLOBAL REVISION ==================== */
.global-revision {
    background: rgba(255, 255, 255, 0.1);
    padding: 30px;
    border-radius: 16px;
    text-align: center;
}

.global-revision h3 {
    font-size: 1.8rem;
    margin-bottom: 20px;
}

.section-checkboxes {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    justify-content: center;
    margin-bottom: 25px;
}

.section-checkboxes label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 1.1rem;
    cursor: pointer;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    transition: background 0.3s;
}

.section-checkboxes label:hover {
    background: rgba(255, 255, 255, 0.3);
}

.section-checkboxes input[type="checkbox"] {
    width: 20px;
    height: 20px;
    cursor: pointer;
}

/* ==================== BUTTONS ==================== */
.big-btn {
    padding: 20px 40px;
    font-size: 1.3rem;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s;
    font-weight: 600;
    min-width: 200px;
    touch-action: manipulation;
}

.primary-btn {
    /* Themed via body[data-theme] */
}

.secondary-btn {
    background: #95a5a6;
    color: white;
}

.secondary-btn:hover {
    background: #7f8c8d;
}

.correct-btn {
    background: #27ae60;
    color: white;
}

.correct-btn:hover {
    background: #229954;
}

.wrong-btn {
    background: #e74c3c;
    color: white;
}

.wrong-btn:hover {
    background: #c0392b;
}

/* ==================== SECTION VIEW ==================== */
.section-actions {
    text-align: center;
    margin-bottom: 30px;
}

.questions-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.question-item {
    padding: 20px;
    border-radius: 12px;
    cursor: pointer;
    transition: transform 0.3s;
}

.question-item:hover {
    transform: translateX(5px);
}

.question-item h3 {
    margin-bottom: 10px;
    font-size: 1.2rem;
}

.question-item .answer {
    display: none;
    margin-top: 15px;
    padding-top: 15px;
    border-top: 2px solid rgba(0, 0, 0, 0.1);
    white-space: pre-wrap;
}

.question-item.revealed .answer {
    display: block;
}

/* ==================== REVISION MODE ==================== */
.progress-indicator {
    font-size: 1.3rem;
    margin-top: 15px;
    font-weight: 600;
    background: rgba(255, 255, 255, 0.2);
    padding: 10px 20px;
    border-radius: 8px;
    display: inline-block;
}

.revision-container {
    max-width: 800px;
    margin: 0 auto;
}

.question-card {
    padding: 40px;
    border-radius: 16px;
    margin-bottom: 30px;
    min-height: 300px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.question-content,
.answer-content {
    font-size: 1.5rem;
    line-height: 1.8;
    white-space: pre-wrap;
}

.question-content {
    font-weight: 600;
}

.answer-content {
    margin-top: 30px;
    padding-top: 30px;
    border-top: 3px solid rgba(0, 0, 0, 0.2);
}

.revision-controls,
.answer-controls {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
}

/* ==================== CODE FORMATTING ==================== */
pre {
    background: rgba(0, 0, 0, 0.1);
    padding: 15px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 10px 0;
}

code {
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.95em;
}

/* ==================== IMAGES ==================== */
.question-image,
.answer-image {
    max-width: 100%;
    max-height: 400px;
    border-radius: 12px;
    margin: 20px 0;
    display: block;
}

/* ==================== AUDIO ==================== */
audio {
    margin: 15px 0;
    width: 100%;
    max-width: 400px;
}

/* ==================== RESPONSIVE ==================== */
@media (max-width: 768px) {
    h1 {
        font-size: 2rem;
    }

    .sections-grid {
        grid-template-columns: 1fr;
    }

    .big-btn {
        padding: 18px 30px;
        font-size: 1.1rem;
        min-width: 150px;
    }

    .question-content,
    .answer-content {
        font-size: 1.2rem;
    }

    .back-btn {
        position: static;
        margin-bottom: 20px;
        display: block;
        width: 100%;
    }
}

/* ==================== ANIMATIONS ==================== */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.page.active {
    animation: fadeIn 0.3s ease-in-out;
}

/* ==================== UTILITIES ==================== */
.hidden {
    display: none !important;
}

.text-center {
    text-align: center;
}

/* Make touch targets larger for iPad */
@media (hover: none) and (pointer: coarse) {
    .big-btn {
        min-height: 60px;
        font-size: 1.4rem;
    }

    .section-card {
        padding: 40px;
    }

    .theme-btn {
        width: 60px;
        height: 60px;
        font-size: 1.8rem;
    }
}

